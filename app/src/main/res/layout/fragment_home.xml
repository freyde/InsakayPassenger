        android:textColor="@android:color/black"
        android:textSize="20sp"
        apps:layout_constraintEnd_toStartOf="@+id/textView5"
        apps:layout_constraintHorizontal_bias="0.0"
        apps:layout_constraintStart_toStartOf="@+id/textView4"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />
    <Spinner
        android:id="@+id/destination_Spinner"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginTop="124dp"
        android:hint="Type something here"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        apps:layout_constraintEnd_toEndOf="@+id/textView5"
        apps:layout_constraintHorizontal_bias="0.0"
        apps:layout_constraintStart_toStartOf="@+id/textView5"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />

    <Spinner
        android:id="@+id/amount_Spinner"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:hint="Type something here"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintEnd_toEndOf="@+id/destination_Spinner"
        apps:layout_constraintHorizontal_bias="0.082"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode"
        apps:layout_constraintVertical_bias="0.539" />

    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="296dp"
        android:layout_height="266dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"

        android:padding="4dp"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"
        apps:layout_constraintHorizontal_bias="0.497"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/holo_green_light"
        android:padding="4dp"
        android:text="GENERATE"
        android:textColor="@android:color/white"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintEnd_toEndOf="@+id/destination_Spinner"
        apps:layout_constraintHorizontal_bias="0.492"
        apps:layout_constraintStart_toStartOf="@+id/origin_Spinner"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode"

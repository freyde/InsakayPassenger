        android:textColor="@android:color/black"
        android:textSize="20sp"
        apps:layout_constraintEnd_toEndOf="@+id/textView3"
        apps:layout_constraintHorizontal_bias="0.0"
        apps:layout_constraintStart_toStartOf="@+id/textView3"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />
    <Spinner
        android:id="@+id/route_Spinner"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginTop="56dp"
        android:hint="Type something here"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        apps:layout_constraintEnd_toEndOf="@+id/textView2"
        apps:layout_constraintHorizontal_bias="0.0"
        apps:layout_constraintStart_toStartOf="@+id/textView2"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />
    <Spinner
        android:id="@+id/origin_Spinner"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_gravity="top"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"

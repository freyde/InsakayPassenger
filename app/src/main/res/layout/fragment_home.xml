        android:layout_marginLeft="8dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Amount"
        android:gravity="bottom"

        android:textColor="@color/colorPrimaryDark"
        apps:layout_constraintBottom_toTopOf="@+id/amount_Spinner"
        apps:layout_constraintEnd_toEndOf="@+id/destination_Spinner"
        apps:layout_constraintHorizontal_bias="0.082"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="179dp"
        android:layout_height="30dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Destination"
        android:gravity="bottom"

        android:textColor="@color/colorPrimaryDark"
        apps:layout_constraintEnd_toEndOf="@+id/route_Spinner"
        apps:layout_constraintHorizontal_bias="0.0"
        apps:layout_constraintStart_toStartOf="@+id/route_Spinner"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="179dp"
        android:layout_height="30dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Origin"
        android:gravity="bottom"
        android:textColor="@color/colorPrimaryDark"

        apps:layout_constraintEnd_toStartOf="@+id/route_Spinner"
        apps:layout_constraintHorizontal_bias="1.0"
        apps:layout_constraintStart_toStartOf="@+id/operator_Spinner"
        apps:layout_constraintTop_toBottomOf="@+id/qrcode" />
    <Spinner
        android:id="@+id/operator_Spinner"
        android:layout_width="179dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="56dp"
